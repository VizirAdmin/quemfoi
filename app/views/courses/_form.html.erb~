  <%= render "shared/error_messages", :target => @course %>  
  <p>
    <%= f.label :identifier %>
    <%= f.text_field :identifier %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
